<resources>

    <!--Application theme-->
    <style name = "Theme.ZFYJ.QH" parent="Theme.APPBase">

    </style>

    <!--ContactsActivity theme-->
    <style name="Theme.Contacts" parent="Theme.APPBase.WithNavDrawer">
        <item name="actionBarInsetStart">@dimen/keyline_2_minus_16dp</item>
        <item name="spinnerBarInsetStart">@dimen/keyline_2_minus_16dp</item>
        <item name="android:windowBackground">@color/gray_background</item>
    </style>

    <style name="Theme.ContactDetails" parent="Theme.ZFYJ.QH">
        <item name="isFloatingWindow">false</item>
    </style>

    <style name="ActionBarThemeOverlay.Search">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorAccent">@color/theme_accent_1</item>
        <item name="colorControlActivated">@color/theme_accent_1</item>
    </style>

    <style name="Theme.Search" parent="Theme.ZFYJ.QH">
        <item name="android:windowBackground">@color/gray_background</item>
        <item name="android:autoCompleteTextViewStyle">@style/Widget.APPBase.Search.AutoCompleteTextView</item>
    </style>


    <!--BrowseJobsActivity theme-->
    <style name="Theme.Test" parent="Theme.APPBase.WithNavDrawer">
        <item name="actionBarInsetStart">@dimen/keyline_2</item>
    </style>

    <style name="TextAppearance.CalendarView.Header" parent="android:TextAppearance.Small">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.CalendarView.Date" parent="android:TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="TextAppearance.CalendarView.WeekDay" parent="android:TextAppearance.Small">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
